<%- include("../partials/header") %>


<div class="row">
  <div class="col-md-3">
    <p class="lead">YelpCamp</p>
    <div class="list-group">
      <li class="list-group-item active">Info 1</li>
      <li class="list-group-item">Info 2</li>
      <li class="list-group-item">Info 3</li>
    </div>
  </div>
  <div class="col-md-9">
    <div class="card" ">
      <figure class=" figure mb-0 ">
      <img class=" figure-img card-img-top mb-3" src="<%= campground.image %>" alt="Card image cap">
      <div class="mt-2">
        <figcaption class="figure-caption float-right mr-3" style="font-size: 1.2rem">
          $9.99 / night
        </figcaption>
        <h4 class=" card-title ml-3"><a href="#"><%= campground.name %></a></h4>
      </div>

      </figure>

      <div class="card-body pt-1">
        <p class="card-text"><%= campground.description %></p>
      </div>
      <p class="text-right  pr-3"><a href="/campgrounds" class="btn btn-success  ">Back</a></p>
    </div>
    <div class="card mt-4 " style="background-color:#edebeb">
      <div class="text-right mt-3 mr-3">
        <span><a href="<%= campground.id %>/comments/new" class="btn  btn-primary ml-1">Leave
            Review</a></span>
      </div>
      <hr class="mb-0">
      <div class="card-body ">
        <% campground.comments.forEach((comment) => { %>
        <div class="float-right">10 Days Ago</div>
        <p class="pl-1 mb-2 lead">
          <%= comment.author %>
        </p>
        <p class="bg-white p-3 border rounded mb-4">
          <%= comment.text %>
        </p>
        <% }); %>

      </div>
    </div>





  </div>
</div>







<%- include("../partials/footer") %>