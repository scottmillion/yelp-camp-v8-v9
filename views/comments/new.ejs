<%- include("../partials/header") %>

<h1 class="text-center m-4">Add New Comment to <%= campground.name %></h1>
<div style="width: 30%; margin: auto;">
  <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
    <div class="form-group"><input type="text" name="comment[text]" placeholder="text" class="form-control" /></div>
    <div class="form-group"><input type="text" name="comment[author]" placeholder="author" class="form-control" /></div>

    <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit!</button></div>

  </form>
  <a href="/campgrounds/<%= campground._id %>" class="btn btn-success btn-block btn-lg mb-2">Go Back</a>
</div>

<%- include("../partials/footer") %>